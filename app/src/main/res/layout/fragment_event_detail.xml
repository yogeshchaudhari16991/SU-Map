<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yogesh16991.test_proj.EventDetail">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top"
        android:id="@+id/details">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Carrier Dome"
            android:id="@+id/markertitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="normal|bold"
            android:textSize="35dp"
            android:textIsSelectable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/eventname"
            android:layout_below="@+id/markertitle"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:layout_below="@+id/eventname"
            android:layout_centerHorizontal="true"
            android:src="@drawable/carrier_dome_night" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="gsadlivglsaiv ljk goslhg ljhsbd ljhg lkjhbsdljf bjhgc lhsbdf ljkhgscl  ljsbdf jgljcg jbvsdkc jghvk jhhvjk sfbljhg kksjdb ukyxg xkj bkjsv "
            android:id="@+id/eventdesc"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="time "
            android:id="@+id/stime"
            android:layout_below="@+id/eventdesc"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="time"
            android:id="@+id/etime"
            android:layout_below="@+id/stime"
            android:layout_centerHorizontal="true" />
